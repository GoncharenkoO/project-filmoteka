{{#each this}}
<div class="gallery__item film-card">
  <picture>
                <source
                  media="(min-width: 1280px)"
                  srcset="
                    https://www.themoviedb.org/t/p/original{{poster_path}}    1x,
                    https://www.themoviedb.org/t/p/original{{poster_path}} 2x
                  "
                />
                <source
                  media="(min-width: 768px)"
                  srcset="
                    https://www.themoviedb.org/t/p/original{{poster_path}}    1x,
                    https://www.themoviedb.org/t/p/original{{poster_path}} 2x
                  "
                />

                <img
                  srcset="
                    https://www.themoviedb.org/t/p/original{{poster_path}}    1x,
                    https://www.themoviedb.org/t/p/original{{poster_path}} 2x
                  "
                  src="https://www.themoviedb.org/t/p/original{{poster_path}}"
                  alt="Аватарка"
                  width="450"
                  loading="lazy"
                />
              </picture>
      <img src="https://www.themoviedb.org/t/p/original{{poster_path}}" alt="" class="film-card__img" />
      <h2 class="film-card__title">{{original_title}}</h2>
      <div class="film-card__info-wrapper">
        <p class="film-card__ganre">жанры</p>
        <p class="film-card__year">год выхода</p>
      </div>
    </div>
     {{/each}}